<?xml version="1.0"?>
<odoo>
    <!-- TOURNAMENT.TEAM -->
    <record id="tournament_team_view_form" model="ir.ui.view">
        <field name="name">tournament.team.form</field>
        <field name="model">tournament.team</field>
        <field name="arch" type="xml">
            <form string="Team">
                <header>
                    <!-- <button type="object" name="action_open" states="draft" string="Open Inscriptions" class="oe_highlight"/>
                    <button type="object" name="action_close" states="open" string="Close Inscriptions" class="oe_highlight"/>
                    <button type="object" name="action_reset_to_draft" states="open,closed,done" string="Reset to Draft" confirm="Are you sure? This will delete all matches linked to this tournament. (If there were any)"/> -->
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- <button class="oe_stat_button" name="%(action_view_tournament_matches)d" icon="fa-ticket" states="closed,done" type="action" string="View Matches"/> -->
                    </div>
                    <div class="oe_title" id='title'>
                        <label for="name" class="oe_edit_only"/>
                        <h1 id="name"><field name="name" placeholder="Player name..."/></h1>
                    </div>
                    <group>
                        <field name="number_of_players"/>
                        <field name="player_ids"/>
                        <field name="next_match_id"/>
                        <field name="tournament_ids" widget="many2many_tags"/>
                    </group>
                </sheet> 
            </form>
        </field>
    </record>

    <record id="tournament_team_view_tree" model="ir.ui.view">
        <field name="name">tournament.team.tree</field>
        <field name="model">tournament.team</field>
        <field name="arch" type="xml">
            <tree string="team">
                <field name="name"/>
                <field name="number_of_players"/>
                <field name="next_match_id"/>
            </tree>
        </field>
    </record>

    <record id="tournament_team_view_search" model="ir.ui.view">
        <field name="name">tournament.team.search</field>
        <field name="model">tournament.team</field>
        <field name="arch" type="xml">
            <search string="Search Tournaments">
                <field name="name"/>
            </search>
        </field>
    </record>
</odoo>