<?xml version="1.0"?>
<odoo>

    <!-- TOURNAMENT.MATCH -->
    <record id="tournament_match_view_form" model="ir.ui.view">
        <field name="name">tournament.match.form</field>
        <field name="model">tournament.match</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Match" create="false">
                <field name="match_type" invisible="1"/>
                <field name="sets_to_win" invisible="1"/>
                <field name="points_per_set" invisible="1"/>
                <header>
                    <button type="object" name="assign_winner_1" string="Team 1 won" class="oe_highlight" attrs="{'invisible': ['|', ('match_type', '=', 'sets'), ('state', '!=', 'confirmed')]}"/>
                    <button type="object" name="assign_winner_2" string="Team 2 won" class="oe_highlight" attrs="{'invisible': ['|', ('match_type', '=', 'sets'), ('state', '!=', 'confirmed')]}"/>
                    <field name="state" widget="statusbar" clickable="True" statusbar_visible="draft,confirmed,started,done"/>
                </header>
                <sheet>
                    <div class="oe_title" style="text-align: center;">
                        <h1 >
                            <field name="first_team_id" placeholder="Team 1 ..."/>
                            <span> VS </span>
                            <field name="second_team_id" placeholder="Team 2 ..."/>
                        </h1>
                    </div>
                    <group>
                        <field name="tournament_id"/>
                        <field name="match_round"/><!-- TODO create pretty name -->
                        <field name="start_date" attrs="{'invisible': [('start_date', '=', False)]}"/>
                    </group>
                    <group>
                        <!-- <field name="score" widget="score" t-attf-options="{'sets_to_win': {{ sets_to_win }}, 'points_per_set': {{ points_per_set }} }"/> -->
                        <field name="score" widget="score"/>
                        <field name="color"/><!-- TODO add a widget -->
                        <field name="winner_id" attrs="{'invisible': [('winner_id', '=', False)]}"/>
                        <field name="next_match_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tournament_match_view_form_score" model="ir.ui.view">
        <field name="name">tournament.match.form.score</field>
        <field name="model">tournament.match</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <form string="Match Score" editable="1" edit="1">
                <group>
                    <field name="score" widget="Score"/>
                </group>
            </form>
        </field>
    </record>

    <record id="tournament_match_score_action" model="ir.actions.act_window">
        <field name="name">Match Score</field>
        <field name="res_model">tournament.match</field>
        <field name="view_type">tree</field>
        <field name="view_mode">form</field>
        <!-- <field name="view_id" ref="tournament_match_view_form_score"/> -->
        <!-- <field name="views">[[False, "tree"], [False, "form"]]</field> -->
        <!-- <field name="res_id" eval="active_id"/> -->
        <field name="domain">[('id', '=', active_id)]</field>
        <!-- <field name="flags">[('id', '=', active_id)]</field>  add in mode_edit: 1 or so in context-->
        <field name="target">new</field><!-- 
        <field name="view_ids" 
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('tournament_match_view_form_score')})]"/> -->
    </record>

    <record id="tournament_match_view_kanban" model="ir.ui.view">
        <field name="name">tournament.match.kanban</field>
        <field name="model">tournament.match</field>
        <field name="arch" type="xml">
            <kanban class="o_tournament_match_kanban" default_group_by="match_round" create="0" group_create="0" string="Match">
                <!-- <t-if winner_id == first_team_id class="winner"> TODO with opacity .5 for loser, font-weight 900 for winner-->
                <field name="previous_match_ids"/>
                <field name="color"/>
                <field name="winner_id"/>
                <field name="points_per_set"/>
                <field name="sets_to_win"/>
                <templates>
                    <t t-name="kanban-box">
                        <!-- <button type="action" name="%(tournament_match_score_action)d" class="btn-link">Set Score</button> -->
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click">

                            <!-- <button type="object" name="tournament_match_score_action" class="btn-link">Set the fucking Score</button> -->
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle btn" data-toggle="dropdown" href="#" >
                                    <span class="fa fa-bars fa-lg"/>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <t t-if="widget.editable"><li><a type="edit">Edit</a></li></t>
                                    <!-- <button type="object" name="tournament_match_score_action" class="btn-link">Set Score</button> -->
                                    <t t-if="widget.deletable"><li><a type="delete">Delete</a></li></t>
                                    <!-- <li t-if="! record.active.value"><a name="toggle_active" type="object">Restore</a></li> -->
                                    <!-- <li t-if="record.active.value"><a name="toggle_active" type="object">Archive</a></li> -->
                                    <!-- <li><ul class="oe_kanban_colorpicker" data-field="color"/></li> -->
                                </ul>
                            </div>
                            <div class="oe_kanban_content">
                                <button class="btn-link o_kanban_match_score">Set Score</button>
                                <button type="object" name="tournament_match_score_action" class="btn-link">Set Score 2</button>
                                <div t-att-class="record.winner_id.raw_value ? 'o_tournament_match_' + (record.winner_id.raw_value[0] == record.first_team_id.raw_value[0] ? 'winner' : 'loser') : ''"> 
                                    <!-- <t t-if winner_id == first_team_id class="winner"> TODO with opacity .5 for loser, font-weight 900 for winner-->
                                    <t t-if="record.first_team_id.raw_value">
                                        <field name="first_team_id"/> <!-- TODO or bye -->
                                    </t>
                                    <t t-else="">
                                        <t t-if="!record.previous_match_ids.raw_value.length">
                                            <span>bye</span>
                                        </t>
                                        <t t-else="">
                                            <span>To be defined</span>
                                        </t>
                                    </t>
                                </div>
                                <div t-att-class="record.winner_id.raw_value ? 'o_tournament_match_' + (record.winner_id.raw_value[0] == record.second_team_id.raw_value[0] ? 'winner' : 'loser') : ''">
                                    <t t-if="record.second_team_id.raw_value">
                                        <field name="second_team_id"/> <!-- TODO or bye -->
                                    </t>
                                    <t t-else="">
                                        <t t-if="!record.previous_match_ids.raw_value.length">
                                            <span>bye</span>
                                        </t>
                                        <t t-else="">
                                            <span>To be defined</span>
                                        </t>
                                    </t>
                                </div>
                                <div t-if="record.start_date">
                                <!-- TODO color coding for time delays/soon to launch <t t-if="new Date(record.deadline.raw_value) &lt; (new Date())" t-set="red">oe_kanban_text_red</t>
                                    <span class="fa fa-clock-o"/> <span t-attf-class="#{red}"><i><field name="deadline"/></i></span> -->
                                    <field name="start_date"/>
                                </div>
                                <div t-if="record.score.raw_value != '[]'">
                                    <field name="score" widget="score"/>
                                </div>
                                <!-- <div class="oe_kanban_bottom_left">
                                    <field name="priority" widget="priority"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <t t-if="record.message_needaction_counter.raw_value">
                                        <span class='oe_kanban_mail_new' title='Important Messages'><i class='fa fa-comments'/><t t-raw="record.message_needaction_counter.raw_value"/></span>
                                    </t>
                                    <img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" t-att-title="record.user_id.value" width="24" height="24" class="oe_kanban_avatar pull-right"/>
                                    <span class="o_helpdesk_sla_failed pull-right fa fa-times-circle" style="margin: 6px" t-attf-title="Failed SLA: {{record.sla_name.raw_value}}" t-if="record.sla_fail &amp;&amp; record.sla_fail.raw_value"></span>
                                    <div class="pull-left" groups="base.group_user">
                                        <field name="kanban_state" widget="kanban_state_selection"/>
                                    </div>
                                </div>  -->
                            </div>
                            <!-- <div class="oe_clear"></div> -->
                        </div>
                    </t>
                </templates>
                <!-- <field name="next_match_id"/> -->
            </kanban>
        </field>
    </record>

    <!-- Actions -->

    <record id="action_view_tournament_matches" model="ir.actions.act_window">
        <field name="name">Matches</field>
        <field name="res_model">tournament.match</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,form</field>
        <field name="context">{'default_tournament_id': active_id}</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent">
            Oops ! It appears there aren't any matches (yet).
          </p>
        </field>
    </record>
</odoo>
